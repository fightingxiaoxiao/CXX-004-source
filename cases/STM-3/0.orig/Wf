FoamFile
{
    version     2.0;
    format      ascii;
    class       volVectorField;
    location    "0";
    object      Wf;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 -1 0 0 0 0];

internalField   uniform (0 0 -0.3);

boundaryField
{
    inlet
    {
        type            cyclic;
    }

    outlet
    {
        type            cyclic;
    }

    top
    {
        type            fixedValue;
        value           uniform (0 0 -0.3);
    }

    sides
    {
        type            empty;
    }

    bottom.snow
    {
        type            fixedValue;
        value           uniform (0 0 0);
    }
}


