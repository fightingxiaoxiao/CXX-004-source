FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      driftDensity;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [1 0 -3 0 0 0 0];

internalField   uniform 0;

boundaryField
{
    inlet
    {
        type            cyclic;
    }

    bottom.snow
    {
        //type            fixedValue;
        //value           uniform 0.3;
        //type        zeroGradient;
        //gradient    uniform 0.1;
        type          codedFixedValue;
        value         uniform 0;

        // Name of generated boundary condition
        name          erosionFlux;
    }

    top
    {
        type            fixedValue;
        value           uniform 0;
    }

    sides
    {
        type            empty;
    }

    outlet
    {
        type            cyclic;
    }
}


