FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    "alpha.*"
    {
        nAlphaCorr      1;
        nAlphaSubCycles 1;

        smoothLimiter   0;

        implicitPhasePressure   no;
        solver                  GAMG;
        smoother                symGaussSeidel;
        tolerance               1e-12;
        relTol                  0;
        minIter                 0;
    }

    p_rgh
    {
        solver                  PCG;
        preconditioner          DIC;
        tolerance               1e-8;
        relTol                  0;
    }

    p_rghFinal
    {
        $p_rgh;
        relTol          0;
    }

    "U.*"
    {
        solver          PBiCGStab;
        preconditioner  DILU;
        //smoother        symGaussSeidel;
        tolerance       1e-6;
        relTol          0;
        minIter         1;
    }

    "(h|e).*"
    {
        solver          smoothSolver;
        smoother        symGaussSeidel;
        tolerance       1e-6;
        relTol          0;
        minIter         0;
        maxIter         0;
    }

    "Theta.*"
    {
        solver          PBiCGStab;
        preconditioner  DILU;
        tolerance       1e-8;
        relTol          0;
        minIter         0;
    }

    "(k|epsilon).*"
    {
        solver          PBiCGStab;
        preconditioner  DILU;
        tolerance       1e-6;
        relTol          0;
        minIter         0;
    }
}

PIMPLE
{
    correctPhi                  yes;
    momentumPredictor           yes;
    nOuterCorrectors            1;
    nCorrectors                 3;
    nNonOrthogonalCorrectors    2;
}

relaxationFactors
{
    equations
    {
        ".*"            1;
    }
}


